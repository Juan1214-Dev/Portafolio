---
import Layout from "../layouts/Layout.astro";
import Badge from "../components/Badge.astro";
import LinkedInIcon from "../components/icons/LinkedIn.astro";
import GitHub from "../components/icons/GitHub.astro";
import Mail from "../components/icons/Mail.astro";
import SocialPill from "../components/SocialPill.astro";
import Experiencia from "../components/Experiencia.astro";
import SectionContainer from "../components/SectionContainer.astro";
import Briefcase from "../components/icons/Briefcase.astro";
import Code from "../components/icons/Code.astro";
import Projects from "../components/Projects.astro";
import ProfileCheck from "../components/icons/ProfileCheck.astro";
import AboutMe from "../components/AboutMe.astro";


---

<Layout title="Portafolio de Juan Manuel-Desarrollador y Programador Web	">
	<main class="px-4">
		<SectionContainer class="py-20 pb-22 ">
			<img
				class="rounded-full size-16	 mb-4"
				src="/img/yo.jpg"
				alt="Juan foto"
			/>

			<h1 class=" tracking-tight text-gray-800 sm:text-5xl dark:text-white text-3xl md:text-4xl lg:text-5xl font-bold flex flex-row gap-x-4 pb-6 lg:pb-10"

			>
				Hola, soy Juan

				<a
					href="https://www.linkedin.com/in/juan-osorio-builes-a05569336"
					target="_blank"
					rel="noopener"
					class="flex justify-center items-center"
				>
					<Badge />
				</a>
			</h1>
			<h2 class="text-xl lg:text-2xl opacity-80 text-wrap max-w-[700px]">
				<span class="opacity-80">
					Tecnólogo en Análisis y Desarrollo de Software con experiencia en pruebas de testing y desarrollo de componentes web en Choucair Testing. 
					Desde Medellín, Colombia, enfocado en mejorar mis habilidades en la creación de aplicaciones web.
				</span>
			</h2>

			<nav class="flex gap-4 mt-8 text flex-wrap" >	
				<SocialPill
				href="https://www.linkedin.com/in/juan-osorio-builes-a05569336/"

				>
					<LinkedInIcon class="size-4 md" />
					LinkedIn
				</SocialPill>

<!-- ########################################################################################### -->

				<SocialPill
					href="https://github.com/Juan1214-Dev"
				>
					<GitHub class="size-4 md" />
					GitHub
				</SocialPill>

<!-- ########################################################################################### -->

				<SocialPill
				
				>
				<Mail class="size-4 md" />
				juan.osobuies@gmail.com
				</SocialPill>

<!-- ########################################################################################### -->
			</nav>

		</SectionContainer>

		<SectionContainer id="experiencia" >

		<h2 class="text-3xl font-semibold mb-6 flex gap-x-3 items-center">
			<Briefcase class="size-7 "/>
			Experiencia Laboral
		</h2>
			<Experiencia/>
		</SectionContainer>

<!-- ########################################################################################### -->


		<SectionContainer id="proyectos" class="mt-16">

			<h2 class="text-3xl font-semibold mb-6 flex gap-x-3 items-center">
				<Code class="size-7 "/>
				Proyectos
			</h2>
				<Projects/>
		</SectionContainer>

<!-- ########################################################################################### -->
	
	<SectionContainer id="sobre-mi" class="mt-10">

		<h2 class="text-3xl font-semibold mb-7 flex gap-x-3 items-center">
			<ProfileCheck class="size-8 "/>
			Sobre Mi 
		</h2>
			
			<AboutMe/>
	</SectionContainer>


	</main>
</Layout>
