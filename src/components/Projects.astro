---

import GitHub from "./icons/GitHub.astro"
import Link from "./icons/Link.astro"
import LinkButton from "./LinkButton.astro"
import Javascript from "./icons/Javascript.astro"
import Python from "./icons/Python.astro"
import Html from "./icons/Html.astro"
import Tailwind from "./icons/Tailwind.astro"
import Porta from "./icons/Porta.astro"

const TAGS = {


  JAVASCRIPT: {
    name: "Javascript.js",
    class: "bg-black text-white",
    icon: Javascript,
  },

  PORTA: {
    name: "Porta.astro",
    class: "bg-black text-white",
    icon: Porta,
  },

  HTML: {
    name: "Html",
    class: "bg-black text-white",
    icon: Html,
  },

  PYTHON: {
    name: "Python.py",
    class: "bg-black text-white",
    icon: Python,
  },

  TAILWIND: {
    name: "Tailwind.Css",
    class: "bg-[#003159] text-white",
    icon: Tailwind,
  },
}
const PROJECTS = [
  {
    title: "Proyecto Basado En la tienda Branchos",
    description:"Este proyecto se enfocó en la investigación y aplicación de consumo de APIs, lo cual me permitió construir un carrito de compras funcional basado en el diseño de la página de Branchos.",
    
    github: "https://github.com/Juan1214-Dev/Branchos-Proyecto",
    image: "/img/B1.jpg",
    tags: [TAGS.JAVASCRIPT],
  },

  {
    title: "Proyecto Final-SENA",
    description: "Proyecto desarrollado en Django con el objetivo de facilitar la contratación y préstamo de servicios de niñeras para usuarios finales. Incluye la construcción de un CRUD y me permitió aprender conceptos clave de Django y frameworks.",
    
    github: "https://github.com/Juan1214-Dev/proyecto-sena",
    image: "/img/N1.jpg",
    tags: [TAGS.HTML, TAGS.PYTHON],
  },

  {
    title: "Portafolio basado en buenas prácticas de diseño web",
    description: "Busqué construir un portafolio con buenas prácticas y fundamentos sólidos, y encontré el diseño de Midudev como inspiración. A partir de allí, recreé y adapté el concepto a mis necesidades.",
    
    github: "https://github.com/pheralb/svgl",
    image: "/img/juanp.png",
    tags: [TAGS.PORTA, TAGS.TAILWIND, TAGS.HTML],
  },
  
  
]
---

<div class="flex flex-col gap-y-16">
  {
    PROJECTS.map(({ image, title, description, tags, link, github }) => (
    <article class="flex flex-col space-x-0 space-y-8 group md:flex-row md:space-x-8 md:space-y-0">
  <div class="w-full md:w-1/2">
    <div class="relative flex flex-col items-center col-span-6 row-span-5 gap-8 transition duration-500 ease-in-out transform shadow-xl overflow-clip rounded-xl sm:rounded-xl md:group-hover:-translate-y-1 md:group-hover:shadow-2xl lg:border lg:border-gray-800 lg:hover:border-gray-700 lg:hover:bg-gray-800/50">
      <img alt="----(Img no cargada)" class="object-cover object-top w-full h-56 transition duration-500 sm:h-full md:scale-110 md:group-hover:scale-105" loading="lazy" src={image} />
    </div>
  </div>

  <div class="w-full md:w-1/2 md:max-w-lg">
    <h3 class="text-2xl font-bold text-gray-800 dark:text-gray-100">
      {title}
    </h3>
    <div class="flex flex-wrap mt-2">
      <ul class="flex flex-row mb-2 gap-x-2">
          {tags.map((tag) => (
            <li>
              <span
                class={`flex gap-x-2 rounded-full text-xs ${tag.class} py-1 px-2 `}
              >
                <tag.icon class="size-4" />
                {tag.name}
              </span>
            </li>
          ))}
        </ul>

      <div class="mt-2 text-gray-700 dark:text-gray-400">{description}</div>
      <footer class="flex items-end justify-start mt-4 gap-x-4">
          {github && (
            <LinkButton href={github}>
              <GitHub class="size-6" />
              Code
              
            </LinkButton>
          )}
          {link && (
            <LinkButton href={link}>
              <Link class="size-4" />
              Links 
              
            </LinkButton>
          )}
        </footer>
    </div>
  </div>
</article>
    ))
  }
</div>



